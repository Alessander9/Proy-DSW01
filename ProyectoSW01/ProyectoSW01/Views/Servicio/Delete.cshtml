@model ProyectoSW01.Models.Servicio

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

<div class="mb-8 flex items-center gap-3">
    <span class="material-icons-round text-3xl text-red-600">warning</span>
    <div>
        <h1 class="text-3xl font-bold text-gray-800">Eliminar servicio</h1>
        <p class="text-gray-500 text-sm mt-1">
            Estás a punto de eliminar este servicio. Esta acción no se puede deshacer.
        </p>
    </div>
</div>

<div class="bg-white rounded-2xl shadow-xl p-8 max-w-3xl">
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm mb-6">

        <div>
            <dt class="text-gray-500 text-xs uppercase font-semibold mb-1">ID</dt>
            <dd class="text-gray-800 font-bold">@Model.ServicioId</dd>
        </div>

        <div>
            <dt class="text-gray-500 text-xs uppercase font-semibold mb-1">Nombre</dt>
            <dd class="text-gray-800 font-bold">@Model.Nombre</dd>
        </div>

        <div>
            <dt class="text-gray-500 text-xs uppercase font-semibold mb-1">Categoría</dt>
            <dd class="text-gray-800">@Model.Categoria</dd>
        </div>

        <div>
            <dt class="text-gray-500 text-xs uppercase font-semibold mb-1">Precio base</dt>
            <dd class="text-green-700 font-semibold">
                S/ @Model.PrecioBase.ToString("0.00")
            </dd>
        </div>
    </dl>

    <form asp-action="Delete" method="post" class="flex items-center gap-3">
        <input type="hidden" asp-for="ServicioId" />

        <button type="submit"
                class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-red-600 text-white text-sm font-semibold hover:bg-red-700 shadow-md">
            <span class="material-icons-round text-base text-white">delete_forever</span>
            Confirmar eliminación
        </button>

        <a asp-action="ListarServicios"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-xl border border-gray-300 text-sm text-gray-700 hover:bg-gray-100">
            <span class="material-icons-round text-base">cancel</span>
            Cancelar
        </a>
    </form>
</div>
