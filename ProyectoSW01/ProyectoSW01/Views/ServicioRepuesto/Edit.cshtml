@model ProyectoSW01.Models.ServicioRepuesto

@{
    ViewData["Title"] = "Editar repuesto del servicio";
    var diagServId = ViewBag.DiagServId as int? ?? Model.DiagServId;
}

<!-- Tailwind CSS -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- Material Icons -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

<div class="max-w-3xl mx-auto px-4 py-8">

    <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-2 mb-6">
        <span class="material-icons text-blue-700">edit</span>
        Editar repuesto del servicio
    </h1>

    <div class="bg-white shadow rounded-xl p-6">
        <form asp-action="Edit" asp-route-id="@Model.ServRepId" method="post">
            @Html.AntiForgeryToken()

            <!-- IDs ocultos -->
            <input asp-for="ServRepId" type="hidden" />
            <input asp-for="DiagServId" type="hidden" />

            <div asp-validation-summary="ModelOnly"
                 class="mb-4 p-3 rounded bg-red-100 text-red-700 text-sm"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                <!-- Diagnóstico-Servicio (solo lectura) -->
                <div>
                    <label class="block text-sm font-semibold text-blue-900 mb-1 flex items-center gap-1">
                        <span class="material-icons text-sm">assignment</span>
                        Diagnóstico-Servicio
                    </label>
                    <input type="text" value="@Model.DiagServId" disabled
                           class="w-full rounded-lg border-gray-300 text-sm bg-gray-100" />
                </div>

                <!-- RepuestoId -->
                <div>
                    <label asp-for="RepuestoId"
                           class="block text-sm font-semibold text-blue-900 mb-1 flex items-center gap-1">
                        <span class="material-icons text-sm">build</span>
                        Repuesto ID
                    </label>
                    <input asp-for="RepuestoId" type="number" min="1"
                           class="w-full rounded-lg border-gray-300 text-sm focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                    <span asp-validation-for="RepuestoId" class="text-xs text-red-600"></span>
                </div>

                <!-- Cantidad -->
                <div>
                    <label asp-for="Cantidad"
                           class="block text-sm font-semibold text-blue-900 mb-1 flex items-center gap-1">
                        <span class="material-icons text-sm">format_list_numbered</span>
                        Cantidad
                    </label>
                    <input asp-for="Cantidad" type="number" min="1"
                           class="w-full rounded-lg border-gray-300 text-sm focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                    <span asp-validation-for="Cantidad" class="text-xs text-red-600"></span>
                </div>

                <!-- Precio -->
                <div>
                    <label asp-for="Precio"
                           class="block text-sm font-semibold text-blue-900 mb-1 flex items-center gap-1">
                        <span class="material-icons text-sm">paid</span>
                        Precio unitario
                    </label>
                    <input asp-for="Precio" type="number" step="0.01" min="0"
                           class="w-full rounded-lg border-gray-300 text-sm focus:ring-2 focus:ring-blue-600 focus:border-blue-600" />
                    <span asp-validation-for="Precio" class="text-xs text-red-600"></span>
                </div>
            </div>

            <!-- Botones -->
            <div class="mt-6 flex justify-end gap-3">
                <a asp-action="ListarPorDiagnostico" asp-route-diagServId="@Model.DiagServId"
                   class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400 transition">
                    <span class="material-icons text-sm mr-1">arrow_back</span>
                    Volver
                </a>
                <button type="submit"
                        class="inline-flex items-center px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition">
                    <span class="material-icons text-sm mr-1">save</span>
                    Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
