@model ProyectoSW01.Models.ServicioRepuesto

@{
    ViewData["Title"] = "Eliminar repuesto del servicio";
    var diagServId = ViewBag.DiagServId as int? ?? Model.DiagServId;
    var subtotal = Model.Cantidad * Model.Precio;
}

<!-- Tailwind CSS -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- Material Icons -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

<div class="max-w-3xl mx-auto px-4 py-8">

    <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-2 mb-4">
        <span class="material-icons text-red-600">warning</span>
        Eliminar repuesto del servicio
    </h1>

    <div class="mb-4 p-3 rounded bg-red-100 text-red-800 flex items-center gap-2 text-sm">
        <span class="material-icons">error_outline</span>
        ¿Estás seguro que deseas eliminar este repuesto del servicio? Esta acción no se puede deshacer.
    </div>

    <div class="bg-white shadow rounded-xl p-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">

            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-sm text-blue-700">fingerprint</span>
                    ID Detalle
                </dt>
                <dd class="mt-1 text-gray-900">@Model.ServRepId</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-sm text-blue-700">assignment</span>
                    Diagnóstico-Servicio ID
                </dt>
                <dd class="mt-1 text-gray-900">@Model.DiagServId</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-sm text-blue-700">build</span>
                    Repuesto ID
                </dt>
                <dd class="mt-1 text-gray-900">@Model.RepuestoId</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-sm text-blue-700">format_list_numbered</span>
                    Cantidad
                </dt>
                <dd class="mt-1 text-gray-900">@Model.Cantidad</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-sm text-blue-700">paid</span>
                    Precio unitario
                </dt>
                <dd class="mt-1 text-gray-900">@Model.Precio.ToString("C")</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-sm text-blue-700">calculate</span>
                    Subtotal
                </dt>
                <dd class="mt-1 text-gray-900">@subtotal.ToString("C")</dd>
            </div>

        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-6 flex justify-end gap-3">
        @Html.AntiForgeryToken()

        <!-- Pasar diagServId para redirigir correctamente -->
        <input type="hidden" name="diagServId" value="@Model.DiagServId" />
        <input type="hidden" name="id" value="@Model.ServRepId" />

        <a asp-action="ListarPorDiagnostico" asp-route-diagServId="@Model.DiagServId"
           class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400 transition">
            <span class="material-icons text-sm mr-1">arrow_back</span>
            Cancelar
        </a>
        <button type="submit"
                class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
            <span class="material-icons text-sm mr-1">delete</span>
            Eliminar
        </button>
    </form>

</div>
