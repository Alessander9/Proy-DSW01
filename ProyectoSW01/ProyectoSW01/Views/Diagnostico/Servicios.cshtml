@model IEnumerable<ProyectoSW01.Models.DiagnosticoServicio>

@{
    ViewData["Title"] = "Servicios del diagnóstico";
    var diagnosticoId = ViewBag.DiagnosticoId as int? ?? 0;
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

<div class="max-w-5xl mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            <span class="material-icons text-blue-700">assignment</span>
            Servicios del diagnóstico @diagnosticoId
        </h1>

        <a asp-action="ListarDiagnosticos"
           class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">
            <span class="material-icons text-sm mr-1">arrow_back</span>
            Volver a diagnósticos
        </a>
    </div>

    <div class="bg-white shadow rounded-xl overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
            <thead class="bg-blue-700 text-white">
                <tr>
                    <th class="px-4 py-3 text-left font-semibold">DiagServ ID</th>
                    <th class="px-4 py-3 text-left font-semibold">Servicio</th>
                    <th class="px-4 py-3 text-left font-semibold">Precio</th>
                    <th class="px-4 py-3 text-right font-semibold">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">@item.DiagServId</td>
                        <td class="px-4 py-3">@item.ServicioNombre</td>
                        <td class="px-4 py-3">@item.Precio.ToString("C")</td>
                        <td class="px-4 py-3 text-right">
                            <!-- AQUÍ VIENE EL LINK CORRECTO -->
                            <a asp-controller="ServicioRepuesto"
                               asp-action="ListarPorDiagnostico"
                               asp-route-diagServId="@item.DiagServId"
                               class="inline-flex items-center px-3 py-1.5 bg-blue-600 text-white rounded-lg text-xs hover:bg-blue-700">
                                <span class="material-icons text-xs mr-1">construction</span>
                                Repuestos
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
