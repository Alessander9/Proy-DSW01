@model ProyectoSW01.Models.Mantenimiento

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Detalle de mantenimiento</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>

<body class="bg-gray-100">

    <div class="max-w-3xl mx-auto px-4 py-6">

        <h1 class="text-2xl font-bold text-blue-900 mb-6 flex items-center gap-2">
            <span class="material-icons text-blue-900">description</span>
            Detalle de mantenimiento
        </h1>

        <div class="bg-white rounded-xl shadow p-6 space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">tag</span>ID
                    </p>
                    <p class="font-semibold text-gray-800">@Model.MantenimientoId</p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">directions_car</span>Vehículo ID
                    </p>
                    <p class="font-semibold text-gray-800">@Model.VehiculoId</p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">home_repair_service</span>Servicio ID
                    </p>
                    <p class="font-semibold text-gray-800">@Model.ServicioId</p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">event</span>Fecha programada
                    </p>
                    <p class="font-semibold text-gray-800">
                        @(Model.FechaProgramada?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                    </p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">event_available</span>Fecha entrega
                    </p>
                    <p class="font-semibold text-gray-800">
                        @(Model.FechaEntrega?.ToString("dd/MM/yyyy HH:mm") ?? "-")
                    </p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">flag</span>Estado
                    </p>
                    <p class="font-semibold text-gray-800">@Model.Estado</p>
                </div>
            </div>

            <div>
                <p class="text-xs text-blue-900 flex items-center gap-1 mb-1">
                    <span class="material-icons text-sm">notes</span>Notas
                </p>
                <p class="text-sm text-gray-800 whitespace-pre-line">
                    @(string.IsNullOrWhiteSpace(Model.Notas) ? "Sin notas." : Model.Notas)
                </p>
            </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-3">
            <a asp-action="ListarMantenimientos"
               class="inline-flex items-center px-4 py-2 rounded-lg border border-blue-900 text-blue-900 text-sm hover:bg-blue-900 hover:text-white transition">
                <span class="material-icons text-sm mr-1">arrow_back</span>
                Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.MantenimientoId"
               class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-900 text-white text-sm font-semibold hover:bg-blue-700 transition">
                <span class="material-icons text-sm mr-1">edit</span>
                Editar
            </a>
        </div>

    </div>

</body>
</html>
