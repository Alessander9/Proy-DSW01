@model ProyectoSW01.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<!-- Tailwind CDN -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- Material Icons CDN -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

<div class="max-w-3xl mx-auto px-4 py-8">

    <!-- Título -->
    <h1 class="text-3xl font-bold text-gray-800 flex items-center gap-2 mb-6">
        <span class="material-icons text-blue-700">person_search</span>
        Detalles del Usuario
    </h1>

    <!-- Tarjeta de detalles -->
    <div class="bg-white shadow rounded-xl p-6">

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">

            <!-- ID Usuario -->
            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-blue-700 text-sm">fingerprint</span>
                    ID Usuario
                </dt>
                <dd class="mt-1 text-gray-900">@Model.IdUsuario</dd>
            </div>

            <!-- Nombre Completo -->
            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-blue-700 text-sm">badge</span>
                    Nombre Completo
                </dt>
                <dd class="mt-1 text-gray-900">@Model.NombreCompleto</dd>
            </div>

            <!-- Correo -->
            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-blue-700 text-sm">mail</span>
                    Correo
                </dt>
                <dd class="mt-1 text-gray-900">@Model.Correo</dd>
            </div>

            <!-- Contraseña -->
            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-blue-700 text-sm">lock</span>
                    Contraseña
                </dt>
                <dd class="mt-1 text-gray-900">@Model.Contrasena</dd>
            </div>

            <!-- Rol -->
            <div>
                <dt class="font-semibold text-gray-600 flex items-center gap-1">
                    <span class="material-icons text-blue-700 text-sm">admin_panel_settings</span>
                    Rol
                </dt>
                <dd class="mt-1 text-gray-900">@Model.IdRol</dd>
            </div>

        </dl>
    </div>

    <!-- Botones -->
    <div class="flex justify-end gap-3 mt-6">

        <a asp-action="Edit" asp-route-id="@Model.IdUsuario"
           class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition">
            <span class="material-icons text-sm mr-1">edit</span>
            Editar
        </a>

        <a asp-action="ListarUsuario"
           class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400 transition">
            <span class="material-icons text-sm mr-1">arrow_back</span>
            Volver
        </a>
    </div>

</div>
