@model ProyectoSW01.Models.Vehiculo

<!-- Tailwind -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- Material Icons -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

<h1 class="text-3xl font-bold mb-6 flex items-center gap-2">
    <span class="material-icons-round text-blue-600">directions_car</span>
    Detalles del Vehículo
</h1>

<div class="min-h-screen bg-slate-50 py-10 px-4 sm:px-6 lg:px-8 font-sans">

    <div class="max-w-4xl mx-auto mb-6">
        <nav class="flex text-sm text-slate-500 hover:text-slate-700 transition-colors">
            <a asp-action="ListarVehiculos" class="flex items-center gap-1">
                <span class="material-icons-round text-lg">arrow_back</span>
                Volver al listado de vehículos
            </a>
        </nav>
    </div>

    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">

        <div class="bg-gradient-to-r from-slate-900 to-slate-800 p-8 text-white flex justify-between items-start">
            <div>
                <h1 class="text-3xl font-bold flex items-center gap-3">
                    <span class="material-icons-round text-emerald-400">directions_car</span>
                    Ficha del Vehículo
                </h1>
                <p class="text-slate-400 mt-2 text-sm">Información técnica y de propiedad</p>
            </div>

            <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg px-4 py-2 text-center">
                <span class="block text-xs text-slate-400 uppercase tracking-wider">ID Vehículo</span>
                <span class="font-mono text-lg font-bold">#@Model.VehiculoId</span>
            </div>
        </div>

        <div class="p-8">

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">

                <div class="md:col-span-2 lg:col-span-1 flex items-start gap-4 p-4 rounded-2xl bg-blue-50/50 hover:bg-blue-50 transition-colors border border-blue-100 group">
                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">person</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-blue-800/60 uppercase tracking-wide">Propietario</p>
                        <p class="text-slate-800 font-bold text-lg mt-0.5">@Model.ClienteNombreCompleto</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-slate-100 transition-colors border border-transparent hover:border-slate-200 group">
                    <div class="w-10 h-10 rounded-full bg-white shadow-sm border border-slate-100 flex items-center justify-center text-slate-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">commute</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Marca</p>
                        <p class="text-slate-800 font-medium mt-0.5">@Model.Marca</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-slate-100 transition-colors border border-transparent hover:border-slate-200 group">
                    <div class="w-10 h-10 rounded-full bg-white shadow-sm border border-slate-100 flex items-center justify-center text-slate-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">category</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Modelo</p>
                        <p class="text-slate-800 font-medium mt-0.5">@Model.Modelo</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-amber-50/50 transition-colors border border-transparent hover:border-amber-100 group">
                    <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center text-amber-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">calendar_today</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Año</p>
                        <p class="text-slate-800 font-medium mt-0.5">@Model.Anio</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-slate-100 transition-colors border border-transparent hover:border-slate-300 group">
                    <div class="w-10 h-10 rounded-full bg-slate-200 flex items-center justify-center text-slate-700 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">confirmation_number</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Placa</p>
                        <div class="mt-1 px-2 py-0.5 bg-yellow-300 border-2 border-slate-800 rounded inline-block shadow-sm">
                            <p class="text-slate-900 font-bold font-mono text-sm tracking-widest">@Model.Placa</p>
                        </div>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-purple-50/50 transition-colors border border-transparent hover:border-purple-100 group">
                    <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center text-purple-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">qr_code</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">VIN / Serie</p>
                        <p class="text-slate-800 font-mono text-sm mt-0.5 break-all">@Model.Vin</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-cyan-50/50 transition-colors border border-transparent hover:border-cyan-100 group lg:col-span-3">
                    <div class="w-10 h-10 rounded-full bg-cyan-100 flex items-center justify-center text-cyan-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">schedule</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Fecha de Registro</p>
                        <p class="text-slate-800 font-medium mt-0.5">@Model.FechaRegistro</p>
                    </div>
                </div>

            </div>

            <div class="pt-6 border-t border-slate-100 flex flex-col sm:flex-row gap-4">

                <a asp-controller="Diagnostico"
                   asp-action="Create"
                   asp-route-vehiculoId="@Model.VehiculoId"
                   class="flex-1 flex items-center justify-center gap-2 px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-xl shadow-lg shadow-amber-200 transition-all transform active:scale-95 font-medium">
                    <span class="material-icons-round">assignment</span>
                    Iniciar Nuevo Diagnóstico
                </a>

                <a asp-action="ListarVehiculos"
                   class="flex items-center justify-center gap-2 px-6 py-3 bg-white border border-slate-200 text-slate-700 hover:bg-slate-50 hover:text-slate-900 rounded-xl transition-all font-medium">
                    <span class="material-icons-round text-slate-500">arrow_back</span>
                    Volver
                </a>
            </div>

        </div>
    </div>
</div>
