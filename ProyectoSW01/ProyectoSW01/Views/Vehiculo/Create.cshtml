@model ProyectoSW01.Models.Vehiculo

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Registrar vehículo</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>
<body class="bg-gray-100">

    <div class="max-w-3xl mx-auto px-4 py-6">
        <h1 class="text-2xl font-bold text-blue-900 mb-6 flex items-center gap-2">
            <span class="material-icons text-blue-900">directions_car</span>
            Registrar vehículo
        </h1>

        <div class="bg-white rounded-xl shadow p-6">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="mb-4 text-sm text-red-600"></div>

                @if (ViewBag.ModelErrors != null)
                {
                    <div class="mb-4 text-sm text-red-700 bg-red-50 border border-red-200 rounded-lg p-3">
                        <p class="font-semibold mb-1">Errores de validación:</p>
                        <ul class="list-disc list-inside">
                            @foreach (var err in (IEnumerable<string>)ViewBag.ModelErrors)
                            {
                                <li>@err</li>
                            }
                        </ul>
                    </div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="mb-4 text-sm text-red-700 bg-red-50 border border-red-200 rounded-lg p-3">
                        <p class="font-semibold mb-1">Error al registrar en base de datos:</p>
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
                }

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                    <!-- Cliente -->
                    <div class="md:col-span-2">
                        <label asp-for="ClienteId" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">person</span>
                            Cliente
                        </label>
                        <select asp-for="ClienteId"
                                asp-items="ViewBag.Clientes"
                                class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm">
                            <option value="">Seleccione un cliente</option>
                        </select>
                        <span asp-validation-for="ClienteId" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Marca -->
                    <div>
                        <label asp-for="Marca" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">drive_eta</span>
                            Marca
                        </label>
                        <input asp-for="Marca"
                               class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm" />
                        <span asp-validation-for="Marca" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Modelo -->
                    <div>
                        <label asp-for="Modelo" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">directions</span>
                            Modelo
                        </label>
                        <input asp-for="Modelo"
                               class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm" />
                        <span asp-validation-for="Modelo" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Año -->
                    <div>
                        <label asp-for="Anio" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">event</span>
                            Año
                        </label>
                        <input asp-for="Anio" type="number"
                               class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm" />
                        <span asp-validation-for="Anio" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Placa -->
                    <div>
                        <label asp-for="Placa" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">confirmation_number</span>
                            Placa
                        </label>
                        <input asp-for="Placa"
                               class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm" />
                        <span asp-validation-for="Placa" class="text-xs text-red-600"></span>
                    </div>

                    <!-- VIN -->
                    <div>
                        <label asp-for="Vin" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">qr_code_2</span>
                            VIN
                        </label>
                        <input asp-for="Vin"
                               class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm" />
                        <span asp-validation-for="Vin" class="text-xs text-red-600"></span>
                    </div>
                </div>

                <div class="mt-6 flex items-center justify-end gap-3">
                    <a asp-action="ListarVehiculos"
                       class="inline-flex items-center px-4 py-2 rounded-lg border border-blue-900 text-blue-900 text-sm hover:bg-blue-900 hover:text-white transition">
                        <span class="material-icons text-sm mr-1">arrow_back</span>
                        Volver
                    </a>

                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-900 text-white text-sm font-semibold hover:bg-blue-700 transition">
                        <span class="material-icons text-sm mr-1">save</span>
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
