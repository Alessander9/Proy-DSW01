@model ProyectoSW01.Models.Cliente

@{
    ViewData["Title"] = "Crear Cliente";
}

<!-- Tailwind CDN -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- Material Symbols CDN -->
<link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:wght@400;500;700&display=swap" />

<!-- Título -->
<div class="mb-8 text-center">
    <h1 class="text-3xl font-bold text-gray-800 tracking-tight">Registrar Nuevo Cliente</h1>
    <p class="text-gray-500 mt-2">Ingresa los datos necesarios para completar el registro.</p>
</div>

<!-- Contenedor -->
<div class="max-w-5xl mx-auto">
    <div class="bg-white border border-gray-100 shadow-xl rounded-2xl p-8 transition-all">

        <form asp-action="Create" method="post" class="space-y-8">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <!-- 2 Columnas -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <!-- Nombres -->
                <div class="space-y-1">
                    <label asp-for="Nombres" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                        <span class="material-symbols-rounded text-blue-600">person</span>
                        @Html.DisplayNameFor(m => m.Nombres)
                    </label>

                    <input asp-for="Nombres"
                           class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50
                                  text-gray-800 text-sm focus:outline-none focus:ring-2
                                  focus:ring-blue-500 focus:bg-white transition" />

                    <span asp-validation-for="Nombres" class="text-red-500 text-xs"></span>
                </div>

                <!-- Apellidos -->
                <div class="space-y-1">
                    <label asp-for="Apellidos" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                        <span class="material-symbols-rounded text-blue-600">badge</span>
                        @Html.DisplayNameFor(m => m.Apellidos)
                    </label>

                    <input asp-for="Apellidos"
                           class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50
                                  text-gray-800 text-sm focus:outline-none focus:ring-2
                                  focus:ring-blue-500 focus:bg-white transition" />

                    <span asp-validation-for="Apellidos" class="text-red-500 text-xs"></span>
                </div>

                <!-- DNI -->
                <div class="space-y-1">
                    <label asp-for="Dni" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                        <span class="material-symbols-rounded text-blue-600">credit_card</span>
                        @Html.DisplayNameFor(m => m.Dni)
                    </label>

                    <input asp-for="Dni"
                           class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50
                                  text-gray-800 text-sm focus:outline-none focus:ring-2
                                  focus:ring-blue-500 focus:bg-white transition" />

                    <span asp-validation-for="Dni" class="text-red-500 text-xs"></span>
                </div>

                <!-- Teléfono -->
                <div class="space-y-1">
                    <label asp-for="Telefono" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                        <span class="material-symbols-rounded text-blue-600">call</span>
                        @Html.DisplayNameFor(m => m.Telefono)
                    </label>

                    <input asp-for="Telefono"
                           class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50
                                  text-gray-800 text-sm focus:outline-none focus:ring-2
                                  focus:ring-blue-500 focus:bg-white transition" />

                    <span asp-validation-for="Telefono" class="text-red-500 text-xs"></span>
                </div>

                <!-- Correo -->
                <div class="space-y-1">
                    <label asp-for="Correo" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                        <span class="material-symbols-rounded text-blue-600">mail</span>
                        @Html.DisplayNameFor(m => m.Correo)
                    </label>

                    <input asp-for="Correo"
                           class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50
                                  text-gray-800 text-sm focus:outline-none focus:ring-2
                                  focus:ring-blue-500 focus:bg-white transition" />

                    <span asp-validation-for="Correo" class="text-red-500 text-xs"></span>
                </div>

                <!-- Dirección -->
                <div class="space-y-1">
                    <label asp-for="Direccion" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                        <span class="material-symbols-rounded text-blue-600">home_pin</span>
                        @Html.DisplayNameFor(m => m.Direccion)
                    </label>

                    <input asp-for="Direccion"
                           class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50
                                  text-gray-800 text-sm focus:outline-none focus:ring-2
                                  focus:ring-blue-500 focus:bg-white transition" />

                    <span asp-validation-for="Direccion" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <!-- BOTONES -->
            <div class="flex items-center justify-end gap-4 pt-4">

                <a asp-action="MenuPrincipal"
                   class="px-5 py-2.5 rounded-xl border border-gray-300 text-sm
                          text-gray-700 bg-white hover:bg-gray-100 flex items-center gap-2 transition">
                    <span class="material-symbols-rounded text-gray-600">arrow_back</span>
                    Volver
                </a>

                <button type="submit"
                        class="px-6 py-2.5 rounded-xl bg-blue-600 text-white text-sm font-semibold
                               flex items-center gap-2 hover:bg-blue-700 shadow-md hover:shadow-lg
                               transition-all">
                    <span class="material-symbols-rounded text-white">save</span>
                    Guardar Cliente
                </button>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
