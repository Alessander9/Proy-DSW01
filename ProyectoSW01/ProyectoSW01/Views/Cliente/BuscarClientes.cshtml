@model IEnumerable<ProyectoSW01.Models.Cliente>

@{
    ViewData["Title"] = "Buscar Clientes";
}

<!-- Tailwind (puedes borrar si ya está en _Layout.cshtml) -->
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="min-h-screen bg-slate-950 py-10 px-5">
    <div class="max-w-5xl mx-auto bg-slate-900/70 border border-slate-800 rounded-2xl p-8 shadow-lg">

        <!-- Título -->
        <h2 class="text-3xl font-semibold text-slate-50 mb-6 flex items-center gap-2">
            <span class="material-icons text-amber-400 text-4xl">manage_search</span>
            Buscar Clientes
        </h2>

        <!-- Formulario de búsqueda -->
        <form asp-action="BuscarClientes" method="post" class="mb-6">
            <div class="flex gap-3">
                <input type="text"
                       name="texto"
                       placeholder="Ingrese nombre, apellido o DNI..."
                       value="@ViewBag.TextoBuscado"
                       class="w-full px-4 py-2 rounded-xl bg-slate-800 border border-slate-700 text-slate-200 focus:ring-2 focus:ring-amber-500 focus:outline-none" />

                <button type="submit"
                        class="flex items-center gap-2 px-4 py-2 bg-amber-500 hover:bg-amber-400 text-white rounded-xl transition">
                    <span class="material-icons">search</span>
                    Buscar
                </button>
            </div>
        </form>

        <!-- Mensaje si no se ingresó nada -->
        @if (ViewBag.Error != null)
        {
            <p class="text-red-400 mb-4">@ViewBag.Error</p>
        }

        <!-- Mostrar resultados -->
        @if (Model != null && Model.Any())
        {
            <div class="mt-4">
                <h3 class="text-xl font-semibold text-slate-50 mb-3">Resultados:</h3>

                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="border-b border-slate-700 text-slate-400">
                            <th class="py-2">ID</th>
                            <th class="py-2">Nombres</th>
                            <th class="py-2">Apellidos</th>
                            <th class="py-2">DNI</th>
                            <th class="py-2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr class="border-b border-slate-800 text-slate-200">
                                <td class="py-2">@c.ClienteId</td>
                                <td>@c.Nombres</td>
                                <td>@c.Apellidos</td>
                                <td>@c.Dni</td>
                                <td>
                                    <div class="flex gap-2">
                                        <a asp-action="Details" asp-route-id="@c.ClienteId"
                                           class="text-sky-400 hover:underline">Detalles</a>

                                        <a asp-action="Edit" asp-route-id="@c.ClienteId"
                                           class="text-amber-400 hover:underline">Editar</a>

                                        <a asp-action="Delete" asp-route-id="@c.ClienteId"
                                           class="text-red-400 hover:underline">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (Model != null)
        {
            <p class="text-slate-400 mt-4">No se encontraron resultados para "<strong>@ViewBag.TextoBuscado</strong>".</p>
        }

        <!-- Botón volver -->
        <div class="mt-6">
            <a asp-controller="Cliente" asp-action="MenuCliente"
               class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800 hover:bg-slate-700 text-slate-200 rounded-xl border border-slate-700 transition">
                <span class="material-icons text-base">arrow_back</span>
                Volver al menú de clientes
            </a>
        </div>

    </div>
</div>
