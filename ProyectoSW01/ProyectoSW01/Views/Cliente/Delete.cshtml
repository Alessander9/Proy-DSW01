@model ProyectoSW01.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<!-- Tailwind CDN -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- Material Icons -->
<link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:wght@300;400;700&display=swap" />

<div class="max-w-3xl mx-auto px-4 py-10">

    <!-- Título -->
    <<div class="min-h-screen bg-slate-50 py-10 px-4 sm:px-6 lg:px-8 font-sans">

        <div class="max-w-3xl mx-auto mb-6">
            <nav class="flex text-sm text-slate-500 hover:text-slate-700 transition-colors">
                <a asp-action="ListarClientes" class="flex items-center gap-1">
                    <span class="material-symbols-rounded text-lg">arrow_back</span>
                    Cancelar y volver al listado
                </a>
            </nav>
        </div>

        <div class="max-w-3xl mx-auto bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">

            <div class="bg-gradient-to-r from-slate-900 to-slate-800 p-8 text-white flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold flex items-center gap-3">
                        <span class="material-symbols-rounded text-red-500 text-4xl">warning</span>
                        Eliminar Cliente
                    </h1>
                    <p class="text-slate-400 mt-2 text-sm">¿Está seguro que desea eliminar este registro?</p>
                </div>

                <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg px-4 py-2 text-center">
                    <span class="block text-xs text-slate-400 uppercase tracking-wider">ID Cliente</span>
                    <span class="font-mono text-lg font-bold">#@Model.ClienteId</span>
                </div>
            </div>

            <div class="p-8">

                <div class="bg-red-50 border border-red-100 rounded-2xl p-4 mb-8 flex gap-4 items-start">
                    <div class="bg-red-100 p-2 rounded-full text-red-600 shrink-0">
                        <span class="material-symbols-rounded">priority_high</span>
                    </div>
                    <div>
                        <h3 class="text-red-800 font-bold text-sm">Acción Irreversible</h3>
                        <p class="text-red-600 text-sm mt-1">
                            Una vez eliminado, no podrá recuperar la información de este cliente ni su historial asociado.
                        </p>
                    </div>
                </div>

                <div class="bg-slate-50 rounded-2xl p-6 border border-slate-100 mb-8">
                    <h3 class="text-xs font-bold text-slate-400 uppercase tracking-wide mb-4">Datos del Cliente a Eliminar</h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-slate-500">
                                <span class="material-symbols-rounded">person</span>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500">Nombre Completo</p>
                                <p class="font-bold text-slate-800">@Model.Nombres @Model.Apellidos</p>
                            </div>
                        </div>

                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-slate-500">
                                <span class="material-symbols-rounded">credit_card</span>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500">DNI</p>
                                <p class="font-medium text-slate-800 font-mono">
                                    @(!string.IsNullOrWhiteSpace(Model.Dni) ? Model.Dni : "---")
                                </p>
                            </div>
                        </div>

                        <div class="flex items-center gap-3 md:col-span-2">
                            <div class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-slate-500">
                                <span class="material-symbols-rounded">mail</span>
                            </div>
                            <div>
                                <p class="text-xs text-slate-500">Correo Electrónico</p>
                                <p class="font-medium text-slate-800">
                                    @(!string.IsNullOrWhiteSpace(Model.Correo) ? Model.Correo : "---")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
        <!-- Formulario de confirmación -->
        <form asp-action="Delete" method="post" class="mt-8 flex flex-wrap justify-end gap-3">
            @* ID oculto *@
            <input type="hidden" asp-for="ClienteId" />

            <a asp-action="ListarClientes"
               class="inline-flex items-center gap-2 px-4 py-2.5 rounded-xl border border-gray-300
                      text-sm text-gray-700 bg-white hover:bg-gray-100 transition">
                <span class="material-symbols-rounded text-gray-600 text-base">arrow_back</span>
                Cancelar
            </a>

            <button type="submit"
                    class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-red-600 text-white
                           text-sm font-semibold hover:bg-red-700 shadow-md hover:shadow-lg transition">
                <span class="material-symbols-rounded text-white text-base">delete</span>
                Confirmar eliminación
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
