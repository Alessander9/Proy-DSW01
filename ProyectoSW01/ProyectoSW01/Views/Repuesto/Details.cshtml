@model ProyectoSW01.Models.Repuesto

@{
    ViewData["Title"] = "Detalles del Repuesto";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />

<style>
    .material-symbols-rounded {
        font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }
</style>

<div class="min-h-screen bg-slate-50 py-10 px-4 sm:px-6 lg:px-8 font-sans">
    
    <div class="max-w-4xl mx-auto mb-6">
        <nav class="flex text-sm text-slate-500 hover:text-slate-700 transition-colors">
            <a asp-action="ListarRepuestos" class="flex items-center gap-1">
                <span class="material-symbols-rounded text-lg">arrow_back</span>
                Volver al inventario
            </a>
        </nav>
    </div>

    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">
        
        <div class="bg-gradient-to-r from-slate-900 to-slate-800 p-8 text-white flex justify-between items-start">
            <div>
                <h1 class="text-3xl font-bold flex items-center gap-3">
                    <span class="material-symbols-rounded text-amber-400 text-4xl">extension</span>
                    Ficha de Repuesto
                </h1>
                <p class="text-slate-400 mt-2 text-sm">Información de inventario y precios</p>
            </div>
            
            <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg px-4 py-2 text-center">
                <span class="block text-xs text-slate-400 uppercase tracking-wider">SKU / ID</span>
                <span class="font-mono text-lg font-bold">#@Model.RepuestoId</span>
            </div>
        </div>

        <div class="p-8">
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                
                <div class="md:col-span-2 lg:col-span-1 flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-slate-100 transition-colors border border-transparent hover:border-slate-200 group">
                    <div class="w-10 h-10 rounded-full bg-white shadow-sm border border-slate-100 flex items-center justify-center text-slate-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">label</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Nombre del Repuesto</p>
                        <p class="text-slate-800 font-bold text-lg mt-0.5">@Model.Nombre</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-emerald-50/50 hover:bg-emerald-50 transition-colors border border-emerald-100 group">
                    <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">payments</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-emerald-800/60 uppercase tracking-wide">Precio Unitario</p>
                        <p class="text-emerald-700 font-bold text-xl mt-0.5">@Model.Precio.ToString("C")</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-blue-50/50 hover:bg-blue-50 transition-colors border border-blue-100 group">
                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">inventory_2</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-blue-800/60 uppercase tracking-wide">Stock Disponible</p>
                        <p class="text-slate-800 font-medium text-lg mt-0.5">
                            @Model.Stock 
                            <span class="text-xs text-slate-500 font-normal">unidades</span>
                        </p>
                    </div>
                </div>

            </div>

            <div class="space-y-6">
                <div class="space-y-2">
                    <label class="flex items-center gap-2 text-sm font-semibold text-slate-700">
                        <span class="material-symbols-rounded text-slate-400 text-lg">description</span>
                        Descripción y Detalles
                    </label>
                    <div class="bg-slate-50 border border-slate-200 rounded-2xl p-6 text-slate-700 leading-relaxed shadow-sm">
                        @if (string.IsNullOrEmpty(Model.Descripcion))
                        {
                            <span class="text-slate-400 italic">No hay descripción disponible para este repuesto.</span>
                        }
                        else
                        {
                            @Model.Descripcion
                        }
                    </div>
                </div>

                <div class="pt-6 border-t border-slate-100 flex flex-col sm:flex-row gap-4">
                    
                    <a asp-action="Edit" asp-route-id="@Model.RepuestoId"
                       class="flex-1 flex items-center justify-center gap-2 px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white rounded-xl shadow-lg shadow-amber-200 transition-all transform active:scale-95 font-medium">
                        <span class="material-symbols-rounded">edit</span>
                        Editar Información
                    </a>
                    
                    <a asp-action="ListarRepuestos"
                       class="flex items-center justify-center gap-2 px-6 py-3 bg-white border border-slate-200 text-slate-700 hover:bg-slate-50 hover:text-slate-900 rounded-xl transition-all font-medium">
                        <span class="material-symbols-rounded text-slate-500">arrow_back</span>
                        Volver
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>