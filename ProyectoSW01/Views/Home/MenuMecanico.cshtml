@{
    ViewData["Title"] = "Menú Mecánico";
}

<!-- TAILWIND CDNs -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- MATERIAL ICONS -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- SECCIÓN ESPECIAL: VEHÍCULOS Y ÓRDENES -->
<div class="min-h-screen bg-slate-950 flex items-center justify-center py-16">
    <div class="w-full max-w-5xl px-4">

        <!-- Título -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-semibold text-slate-50 mb-3">
                Módulo Operativo del Mecánico
            </h2>
            <p class="text-slate-400 text-sm md:text-base">
                Acceso rápido a vehículos y órdenes de trabajo.
            </p>
        </div>

        <!-- CONTENEDOR HORIZONTAL -->
        <div class="flex flex-col md:flex-row gap-8 justify-center items-stretch">

            <!-- ✅ BLOQUE VEHÍCULOS (VERDE) -->
            <div class="flex-1 bg-gradient-to-br from-slate-900 to-slate-800
                        border border-emerald-500/30 rounded-3xl p-8
                        shadow-xl hover:shadow-[0_0_35px_rgba(16,185,129,0.6)]
                        transition-all">

                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center gap-3">
                        <span class="material-icons text-emerald-400 text-4xl">directions_car</span>
                        <h3 class="text-2xl font-semibold text-slate-50">Vehículos</h3>
                    </div>
                    <span class="px-3 py-1 text-xs rounded-full bg-emerald-500/20 text-emerald-300">
                        Operación
                    </span>
                </div>

                <p class="text-slate-400 text-sm mb-6">
                    Visualiza los vehículos asignados para diagnóstico, revisión y mantenimiento.
                </p>

                <a asp-controller="Vehiculo" asp-action="MenuVehiculo"
                   class="w-full flex justify-center items-center gap-2 px-5 py-3
                          rounded-xl bg-emerald-500 hover:bg-emerald-400
                          text-white font-semibold transition">
                    Ingresar
                    <span class="material-icons">arrow_forward</span>
                </a>
            </div>

            <!-- ✅ BLOQUE ÓRDENES DE TRABAJO (SE MANTIENE) -->
            <div class="flex-1 bg-gradient-to-br from-slate-900 to-slate-800
                        border border-sky-500/30 rounded-3xl p-8
                        shadow-xl hover:shadow-[0_0_35px_rgba(56,189,248,0.6)]
                        transition-all">

                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center gap-3">
                        <span class="material-icons text-sky-400 text-4xl">assignment</span>
                        <h3 class="text-2xl font-semibold text-slate-50">Órdenes de Trabajo</h3>
                    </div>
                    <span class="px-3 py-1 text-xs rounded-full bg-sky-500/20 text-sky-300">
                        Operación
                    </span>
                </div>

                <p class="text-slate-400 text-sm mb-6">
                    Controla los estados, avances y detalles de cada trabajo del taller para tener un manejo ideal.
                </p>

                <a asp-controller="OrdenTrabajo" asp-action="Index"
                   class="w-full flex justify-center items-center gap-2 px-5 py-3
                          rounded-xl bg-sky-500 hover:bg-sky-400
                          text-white font-semibold transition">
                    Ingresar
                    <span class="material-icons">arrow_forward</span>
                </a>
            </div>

        </div>
    </div>
</div>
