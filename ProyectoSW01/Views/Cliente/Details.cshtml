@model ProyectoSW01.Models.Cliente

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<script src="https://cdn.tailwindcss.com"></script>

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />

<style>
    .material-symbols-rounded {
        font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }
</style>

<div class="min-h-screen bg-slate-50 py-10 px-4 sm:px-6 lg:px-8 font-sans">

    <div class="max-w-4xl mx-auto mb-6">
        <nav class="flex text-sm text-slate-500 hover:text-slate-700 transition-colors">
            <a asp-action="ListarClientes" class="flex items-center gap-1">
                <span class="material-symbols-rounded text-lg">arrow_back</span>
                Volver al listado de clientes
            </a>
        </nav>
    </div>

    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">

        <div class="bg-gradient-to-r from-slate-900 to-slate-800 p-8 text-white flex justify-between items-start">
            <div>
                <h1 class="text-3xl font-bold flex items-center gap-3">
                    <span class="material-symbols-rounded text-emerald-400 text-4xl">person_search</span>
                    Perfil del Cliente
                </h1>
                <p class="text-slate-400 mt-2 text-sm">Información personal y de contacto</p>
            </div>

            <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg px-4 py-2 text-center">
                <span class="block text-xs text-slate-400 uppercase tracking-wider">ID Cliente</span>
                <span class="font-mono text-lg font-bold">#@Model.ClienteId</span>
            </div>
        </div>

        <div class="p-8">

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">

                <div class="md:col-span-2 lg:col-span-1 flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-slate-100 transition-colors border border-transparent hover:border-slate-200 group">
                    <div class="w-10 h-10 rounded-full bg-white shadow-sm border border-slate-100 flex items-center justify-center text-slate-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">badge</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Nombre Completo</p>
                        <p class="text-slate-800 font-bold text-lg mt-0.5">@Model.Nombres @Model.Apellidos</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-blue-50/50 hover:bg-blue-50 transition-colors border border-blue-100 group">
                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">credit_card</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-blue-800/60 uppercase tracking-wide">DNI / Identificación</p>
                        <p class="text-slate-800 font-mono font-medium text-lg mt-0.5">
                            @(!string.IsNullOrWhiteSpace(Model.Dni) ? Model.Dni : "---")
                        </p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-emerald-50/50 hover:bg-emerald-50 transition-colors border border-emerald-100 group">
                    <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">call</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-emerald-800/60 uppercase tracking-wide">Teléfono</p>
                        <p class="text-emerald-700 font-bold text-lg mt-0.5">
                            @(!string.IsNullOrWhiteSpace(Model.Telefono) ? Model.Telefono : "---")
                        </p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-purple-50/50 hover:bg-purple-50 transition-colors border border-purple-100 group">
                    <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center text-purple-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">mail</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-purple-800/60 uppercase tracking-wide">Correo Electrónico</p>
                        <p class="text-slate-800 font-medium text-sm mt-0.5 truncate max-w-[200px]" title="@Model.Correo">
                            @(!string.IsNullOrWhiteSpace(Model.Correo) ? Model.Correo : "---")
                        </p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-slate-100 transition-colors border border-transparent hover:border-slate-200 group lg:col-span-2">
                    <div class="w-10 h-10 rounded-full bg-white shadow-sm border border-slate-100 flex items-center justify-center text-slate-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">home_pin</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Dirección</p>
                        <p class="text-slate-800 font-medium mt-0.5">
                            @(!string.IsNullOrWhiteSpace(Model.Direccion) ? Model.Direccion : "No registrada")
                        </p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-slate-100 transition-colors border border-transparent hover:border-slate-200 group">
                    <div class="w-10 h-10 rounded-full bg-white shadow-sm border border-slate-100 flex items-center justify-center text-slate-600 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-rounded">calendar_month</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Fecha de Alta</p>
                        <p class="text-slate-800 font-medium mt-0.5">
                            @Model.FechaRegistro.ToString("yyyy-MM-dd")
                        </p>
                    </div>
                </div>

            </div>

            <div class="pt-6 border-t border-slate-100 flex flex-col sm:flex-row gap-4 justify-end">

                <a asp-action="ListarClientes"
                   class="flex items-center justify-center gap-2 px-5 py-2.5 bg-white border border-slate-200 text-slate-700 hover:bg-slate-50 hover:text-slate-900 rounded-xl transition-all font-medium text-sm">
                    <span class="material-symbols-rounded text-slate-500">arrow_back</span>
                    Volver
                </a>

                <a asp-action="Edit" asp-route-id="@Model.ClienteId"
                   class="flex items-center justify-center gap-2 px-5 py-2.5 bg-amber-500 hover:bg-amber-600 text-white rounded-xl shadow-lg shadow-amber-200 transition-all transform active:scale-95 font-medium text-sm">
                    <span class="material-symbols-rounded">edit</span>
                    Editar Cliente
                </a>

                <a asp-action="Delete" asp-route-id="@Model.ClienteId"
                   class="flex items-center justify-center gap-2 px-5 py-2.5 bg-red-50 border border-red-200 text-red-600 hover:bg-red-100 hover:text-red-700 rounded-xl transition-all font-medium text-sm">
                    <span class="material-symbols-rounded">delete</span>
                    Eliminar
                </a>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}