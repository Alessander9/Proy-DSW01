@model ProyectoSW01.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<script src="https://cdn.tailwindcss.com"></script>

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />

<style>
    .material-symbols-rounded {
        font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }
</style>

<div class="min-h-screen bg-slate-50 py-10 px-4 sm:px-6 lg:px-8 font-sans">

    <div class="max-w-4xl mx-auto mb-6">
        <nav class="flex text-sm text-slate-500 hover:text-slate-700 transition-colors">
            <a asp-action="ListarClientes" class="flex items-center gap-1">
                <span class="material-symbols-rounded text-lg">arrow_back</span>
                Cancelar y volver al listado
            </a>
        </nav>
    </div>

    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">

        <div class="bg-gradient-to-r from-slate-900 to-slate-800 p-8 text-white flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold flex items-center gap-3">
                    <span class="material-symbols-rounded text-blue-400">manage_accounts</span>
                    Editar Cliente
                </h1>
                <p class="text-slate-400 mt-2 text-sm">Modifique los datos personales y de contacto.</p>
            </div>

            <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg px-4 py-2 text-center">
                <span class="block text-xs text-slate-400 uppercase tracking-wider">ID Cliente</span>
                <span class="font-mono text-lg font-bold">#@Model.ClienteId</span>
            </div>
        </div>

        <div class="p-8">
            <form asp-action="Edit" method="post" class="space-y-8">

                <input type="hidden" asp-for="ClienteId" />

                <div asp-validation-summary="ModelOnly" class="rounded-xl bg-red-50 border border-red-100 p-4 text-red-600 text-sm flex items-center gap-2">
                    <span class="material-symbols-rounded">error_outline</span>
                    <span>Por favor corrija los errores a continuación.</span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                    <div class="group">
                        <label asp-for="Nombres" class="flex items-center gap-2 text-xs font-bold text-slate-500 uppercase tracking-wide mb-2">
                            <span class="material-symbols-rounded text-slate-400 text-base">person</span>
                            Nombres
                        </label>
                        <input asp-for="Nombres"
                               class="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-xl px-4 py-3.5 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder:text-slate-400" />
                        <span asp-validation-for="Nombres" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div class="group">
                        <label asp-for="Apellidos" class="flex items-center gap-2 text-xs font-bold text-slate-500 uppercase tracking-wide mb-2">
                            <span class="material-symbols-rounded text-slate-400 text-base">badge</span>
                            Apellidos
                        </label>
                        <input asp-for="Apellidos"
                               class="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-xl px-4 py-3.5 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder:text-slate-400" />
                        <span asp-validation-for="Apellidos" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div class="group">
                        <label asp-for="Dni" class="flex items-center gap-2 text-xs font-bold text-slate-500 uppercase tracking-wide mb-2">
                            <span class="material-symbols-rounded text-slate-400 text-base">credit_card</span>
                            DNI / Identificación
                        </label>
                        <input asp-for="Dni"
                               class="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-xl px-4 py-3.5 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder:text-slate-400 font-mono" />
                        <span asp-validation-for="Dni" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div class="group">
                        <label asp-for="Telefono" class="flex items-center gap-2 text-xs font-bold text-slate-500 uppercase tracking-wide mb-2">
                            <span class="material-symbols-rounded text-slate-400 text-base">call</span>
                            Teléfono
                        </label>
                        <input asp-for="Telefono"
                               class="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-xl px-4 py-3.5 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder:text-slate-400" />
                        <span asp-validation-for="Telefono" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div class="group md:col-span-2">
                        <label asp-for="Correo" class="flex items-center gap-2 text-xs font-bold text-slate-500 uppercase tracking-wide mb-2">
                            <span class="material-symbols-rounded text-slate-400 text-base">mail</span>
                            Correo Electrónico
                        </label>
                        <input asp-for="Correo" type="email"
                               class="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-xl px-4 py-3.5 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder:text-slate-400" />
                        <span asp-validation-for="Correo" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div class="group md:col-span-2">
                        <label asp-for="Direccion" class="flex items-center gap-2 text-xs font-bold text-slate-500 uppercase tracking-wide mb-2">
                            <span class="material-symbols-rounded text-slate-400 text-base">home_pin</span>
                            Dirección de Domicilio
                        </label>
                        <input asp-for="Direccion"
                               class="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-xl px-4 py-3.5 focus:outline-none focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all placeholder:text-slate-400" />
                        <span asp-validation-for="Direccion" class="text-xs text-red-500 mt-1 block"></span>
                    </div>

                    <div class="group md:col-span-2">
                        <label asp-for="FechaRegistro" class="flex items-center gap-2 text-xs font-bold text-slate-400 uppercase tracking-wide mb-2">
                            <span class="material-symbols-rounded text-slate-300 text-base">calendar_month</span>
                            Fecha de Alta (Solo Lectura)
                        </label>
                        <div class="relative">
                            <input asp-for="FechaRegistro" readonly
                                   class="w-full bg-slate-100 border border-slate-200 text-slate-500 text-sm rounded-xl px-4 py-3.5 cursor-not-allowed select-none" />
                            <div class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400">
                                <span class="material-symbols-rounded text-sm">lock</span>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="pt-6 border-t border-slate-100 flex flex-col sm:flex-row justify-end gap-4">
                    <a asp-action="ListarClientes"
                       class="px-6 py-3 rounded-xl border border-slate-200 text-slate-600 font-medium hover:bg-slate-50 hover:text-slate-800 transition-colors text-center">
                        Cancelar
                    </a>

                    <button type="submit"
                            class="inline-flex items-center justify-center gap-2 px-8 py-3 bg-blue-600 text-white rounded-xl shadow-lg shadow-blue-200 hover:bg-blue-700 hover:shadow-blue-300 transition-all transform active:scale-95 font-medium">
                        <span class="material-symbols-rounded text-sm">save</span>
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}