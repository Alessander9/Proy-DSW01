@model ProyectoSW01.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Registrar Usuario</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>

<body class="bg-gray-100">

    <div class="max-w-3xl mx-auto px-4 py-6">
        <h1 class="text-2xl font-bold text-blue-900 mb-6 flex items-center gap-2">
            <span class="material-icons text-blue-900">person_add</span>
            Registrar Usuario
        </h1>

        <div class="bg-white rounded-xl shadow p-6">

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly"
                     class="mb-4 p-3 rounded bg-red-100 text-red-700 text-sm"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                    <!-- Nombre completo -->
                    <div>
                        <label asp-for="NombreCompleto" class="text-sm font-semibold text-blue-900 flex items-center gap-1">
                            <span class="material-icons text-sm">badge</span>
                            @Html.DisplayNameFor(m => m.NombreCompleto)
                        </label>
                        <input asp-for="NombreCompleto"
                               class="w-full rounded-lg border-gray-300 mt-1 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="NombreCompleto" class="text-red-600 text-xs"></span>
                    </div>

                    <!-- Correo -->
                    <div>
                        <label asp-for="Correo" class="text-sm font-semibold text-blue-900 flex items-center gap-1">
                            <span class="material-icons text-sm">email</span>
                            @Html.DisplayNameFor(m => m.Correo)
                        </label>
                        <input asp-for="Correo"
                               class="w-full rounded-lg border-gray-300 mt-1 focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="Correo" class="text-red-600 text-xs"></span>
                    </div>

                    <!-- Contraseña -->
                    <div>
                        <label asp-for="Contrasena" class="text-sm font-semibold text-blue-900 flex items-center gap-1">
                            <span class="material-icons text-sm">lock</span>
                            @Html.DisplayNameFor(m => m.Contrasena)
                        </label>
                        <input asp-for="Contrasena" type="password"
                               class="w-full rounded-lg border-gray-300 mt-1 focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="Contrasena" class="text-red-600 text-xs"></span>
                    </div>

                    <!-- Rol -->
                    <div>
                        <label asp-for="IdRol" class="text-sm font-semibold text-blue-900 flex items-center gap-1">
                            <span class="material-icons text-sm">admin_panel_settings</span>
                            @Html.DisplayNameFor(m => m.IdRol)
                        </label>

                        <select asp-for="IdRol"
                                asp-items="@(ViewBag.Roles)"
                                class="w-full mt-1 rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500">
                            <option value="">Seleccione un rol</option>
                        </select>

                        <span asp-validation-for="IdRol" class="text-red-600 text-xs"></span>
                    </div>

                </div>

                <!-- Botones -->
                <div class="flex justify-end gap-3 mt-6">
                    <a asp-action="ListarUsuario"
                       class="px-4 py-2 border border-blue-900 text-blue-900 rounded-lg hover:bg-blue-900 hover:text-white flex items-center gap-1">
                        <span class="material-icons text-sm">arrow_back</span>
                        Volver
                    </a>

                    <button type="submit"
                            class="px-4 py-2 bg-blue-900 text-white rounded-lg hover:bg-blue-700 flex items-center gap-1">
                        <span class="material-icons text-sm">save</span>
                        Guardar
                    </button>
                </div>

            </form>
        </div>
    </div>

</body>
</html>
