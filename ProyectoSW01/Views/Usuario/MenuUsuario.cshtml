@{
    ViewData["Title"] = "Menú de Usuarios";
}

<!-- TAILWIND -->
<script src="https://cdn.tailwindcss.com"></script>

<!-- MATERIAL ICONS -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="min-h-[80vh] bg-slate-950 flex items-center justify-center py-10">
    <div class="w-full max-w-5xl px-4">

        <!-- Título -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h2 class="text-3xl md:text-4xl font-semibold text-slate-50 mb-2 flex items-center gap-2">
                    <span class="material-icons text-rose-400 text-4xl">
                        admin_panel_settings
                    </span>
                    Menú de Usuarios
                </h2>
                <p class="text-slate-400 text-sm md:text-base">
                    Administra usuarios, roles y permisos del sistema del taller.
                </p>
            </div>

            <!-- Volver al menú principal -->
            <div>
                <a asp-controller="Home" asp-action="MenuPrincipal"
                   class="inline-flex items-center gap-1 px-4 py-2 rounded-full text-sm font-medium
                          bg-slate-800 hover:bg-slate-700 text-slate-100 border border-slate-700 transition-colors">
                    <span class="material-icons text-base">arrow_back</span>
                    Volver al menú principal
                </a>
            </div>
        </div>

        <!-- Grid de opciones -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <!-- Listar Usuarios -->
            <div class="group bg-slate-900/70 border border-slate-800 rounded-2xl p-5
                        shadow-lg shadow-slate-900/40 hover:shadow-xl hover:-translate-y-1
                        hover:shadow-[0_0_25px_rgba(244,63,94,0.7)] transition-all duration-200">

                <div class="flex items-center gap-2 mb-3">
                    <span class="material-icons text-rose-400 text-3xl">list_alt</span>
                    <h3 class="text-slate-50 font-semibold text-lg">Listar usuarios</h3>
                </div>

                <p class="text-slate-400 text-sm mb-4">
                    Visualiza todos los usuarios del sistema: administradores, recepcionistas y mecánicos.
                </p>

                <a asp-controller="Usuario" asp-action="ListarUsuario"
                   class="inline-flex items-center gap-1 text-sm font-medium px-3 py-2 rounded-full
                          bg-rose-500 hover:bg-rose-400 text-white transition-colors">
                    Ir al listado
                    <span class="material-icons text-base">arrow_forward</span>
                </a>
            </div>

            <!-- Registrar Usuario -->
            <div class="group bg-slate-900/70 border border-slate-800 rounded-2xl p-5
                        shadow-lg shadow-slate-900/40 hover:shadow-xl hover:-translate-y-1
                        hover:shadow-[0_0_25px_rgba(244,63,94,0.7)] transition-all duration-200">

                <div class="flex items-center gap-2 mb-3">
                    <span class="material-icons text-rose-400 text-3xl">person_add</span>
                    <h3 class="text-slate-50 font-semibold text-lg">Registrar usuario</h3>
                </div>

                <p class="text-slate-400 text-sm mb-4">
                    Crea nuevos usuarios asignando rol, correo y credenciales de acceso al sistema.
                </p>

                <a asp-controller="Usuario" asp-action="Create"
                   class="inline-flex items-center gap-1 text-sm font-medium px-3 py-2 rounded-full
                          bg-rose-500 hover:bg-rose-400 text-white transition-colors">
                    Nuevo usuario
                    <span class="material-icons text-base">person_add_alt</span>
                </a>
            </div>

