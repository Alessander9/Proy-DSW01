@model LoginViewModel

<script src="https://cdn.tailwindcss.com"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<style>
    /* Animación suave del SVG */
    @@keyframes floatWave {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(20px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    .animated-wave {
        animation: floatWave 8s ease-in-out infinite;
    }
</style>

<div class="min-h-screen flex items-center justify-center bg-[#0D0D0D] relative overflow-hidden">

    <!-- Fondo SVG animado -->
    <svg class="absolute top-0 left-0 w-full h-full animated-wave opacity-20"
         viewBox="0 0 1440 320">
        <path fill="#E50914" fill-opacity="0.4"
              d="M0,64L80,74.7C160,85,320,107,480,133.3C640,160,800,192,960,181.3C1120,171,1280,117,1360,90.7L1440,64L1440,0L1360,0C1280,0,1120,0,960,0C800,0,640,0,480,0C320,0,160,0,80,0L0,0Z">
        </path>
    </svg>

    <div class="relative z-10 bg-[#1A1A1A]/80 backdrop-blur-xl p-10 rounded-2xl shadow-xl w-full max-w-md border border-[#2a2a2a]">

        <!-- Título -->
        <h2 class="text-3xl font-bold text-white text-center mb-6 tracking-wide">
            Panel de Acceso
        </h2>

        <form asp-action="Login" method="post" class="space-y-6">

            <!-- Correo -->
            <div>
                <label class="block mb-1 text-gray-300 font-semibold">Correo</label>
                <input asp-for="Correo"
                       class="w-full px-4 py-3 rounded-lg bg-[#0D0D0D]/80 border border-gray-700 text-white focus:outline-none focus:border-[#E50914]"
                       placeholder="correo@example.com" />
                <span asp-validation-for="Correo" class="text-red-500 text-sm"></span>
            </div>

            <!-- Contraseña -->
            <div>
                <label class="block mb-1 text-gray-300 font-semibold">Contraseña</label>
                <input asp-for="Contrasena" type="password"
                       class="w-full px-4 py-3 rounded-lg bg-[#0D0D0D]/80 border border-gray-700 text-white focus:outline-none focus:border-[#E50914]"
                       placeholder="••••••••" />
                <span asp-validation-for="Contrasena" class="text-red-500 text-sm"></span>
            </div>

            <!-- Botón -->
            <button type="submit"
                    class="w-full py-3 rounded-lg text-white font-semibold bg-[#E50914] hover:bg-[#b40810] transition duration-200 shadow-md">
                Ingresar
            </button>

        </form>

        <p class="text-center text-gray-500 text-sm mt-6">
            © 2025 - Sistema de Taller
        </p>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Acceso Denegado',
            text: '@ViewBag.Error',
            confirmButtonColor: '#E50914'
        });
    </script>
}