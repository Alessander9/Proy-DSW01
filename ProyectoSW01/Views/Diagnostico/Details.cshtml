@model ProyectoSW01.Models.Diagnostico

@{
    ViewData["Title"] = "Detalle de diagnóstico";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

<h1 class="text-3xl font-bold mb-6 text-gray-800 flex items-center gap-2">
    <span class="material-icons-round text-blue-600">info</span>
    Detalle de diagnóstico
</h1>

<div class="min-h-screen bg-slate-50 py-10 px-4 sm:px-6 lg:px-8 font-sans">

    <div class="max-w-4xl mx-auto mb-6">
        <nav class="flex text-sm text-slate-500 hover:text-slate-700 transition-colors">
            <a asp-action="ListarDiagnosticos" class="flex items-center gap-1">
                <span class="material-icons-round text-lg">arrow_back</span>
                Volver al listado
            </a>
        </nav>
    </div>

    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">

        <div class="bg-gradient-to-r from-slate-900 to-slate-800 p-8 text-white flex justify-between items-start">
            <div>
                <h1 class="text-3xl font-bold flex items-center gap-3">
                    <span class="material-icons-round text-blue-400">car_crash</span>
                    Diagnóstico Técnico
                </h1>
                <p class="text-slate-400 mt-2 text-sm">Detalles completos del reporte mecánico</p>
            </div>

            <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg px-4 py-2 text-center">
                <span class="block text-xs text-slate-400 uppercase tracking-wider">ID Reporte</span>
                <span class="font-mono text-lg font-bold">#@Model.DiagnosticoId</span>
            </div>
        </div>

        <div class="p-8">

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-blue-50/50 transition-colors border border-transparent hover:border-blue-100 group">
                    <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">directions_car</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Vehículo ID</p>
                        <p class="text-slate-800 font-medium font-mono mt-0.5">@Model.VehiculoId</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-emerald-50/50 transition-colors border border-transparent hover:border-emerald-100 group">
                    <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">engineering</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Mecánico ID</p>
                        <p class="text-slate-800 font-medium font-mono mt-0.5">@Model.MecanicoId</p>
                    </div>
                </div>

                <div class="flex items-start gap-4 p-4 rounded-2xl bg-slate-50 hover:bg-purple-50/50 transition-colors border border-transparent hover:border-purple-100 group">
                    <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center text-purple-600 group-hover:scale-110 transition-transform">
                        <span class="material-icons-round">event</span>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Fecha Registro</p>
                        <p class="text-slate-800 font-medium mt-0.5">@Model.Fecha</p>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 space-y-2">
                    <label class="flex items-center gap-2 text-sm font-semibold text-slate-700">
                        <span class="material-icons-round text-slate-400 text-lg">description</span>
                        Descripción del Problema
                    </label>
                    <div class="bg-slate-50 border border-slate-200 rounded-2xl p-6 text-slate-700 leading-relaxed shadow-sm">
                        @if (string.IsNullOrEmpty(Model.Descripcion))
                        {
                            <span class="text-slate-400 italic">No hay descripción disponible.</span>
                        }
                        else
                        {
                            @Model.Descripcion
                        }
                    </div>
                </div>

                <div class="space-y-6">
                    <div>
                        <label class="flex items-center gap-2 text-sm font-semibold text-slate-700 mb-2">
                            <span class="material-icons-round text-slate-400 text-lg">flag</span>
                            Estado Actual
                        </label>
                        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-amber-50 border border-amber-200 text-amber-700 w-full justify-center">
                            <span class="relative flex h-2.5 w-2.5">
                                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
                                <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-amber-500"></span>
                            </span>
                            <span class="font-medium text-sm">@Model.Estado</span>
                        </div>
                    </div>

                    <div class="pt-4 border-t border-slate-100 flex flex-col gap-3">
                        <a asp-controller="Carrito"
                           asp-action="Index"
                           asp-route-vehiculoId="@Model.VehiculoId"
                           class="flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl shadow-lg shadow-blue-200 transition-all transform active:scale-95 font-medium">
                            <span class="material-icons-round">build_circle</span>
                            Crear Orden
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model.DiagnosticoId"
                           class="flex items-center justify-center gap-2 px-6 py-3 bg-white border border-slate-200 text-slate-700 hover:bg-slate-50 hover:text-slate-900 rounded-xl transition-all font-medium">
                            <span class="material-icons-round text-slate-500">edit</span>
                            Editar Diagnóstico
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>