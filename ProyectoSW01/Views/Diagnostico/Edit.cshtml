@model ProyectoSW01.Models.Diagnostico

@{
    ViewData["Title"] = "Editar diagnóstico";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Editar diagnóstico</h1>
    <p class="text-gray-500 text-sm mt-1">Actualiza la información del diagnóstico.</p>
</div>

<div class="max-w-4xl bg-white rounded-2xl shadow-xl p-8 mx-auto">
    <form asp-action="Edit" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-2"></div>

        <input type="hidden" asp-for="DiagnosticoId" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <div class="space-y-1">
                <label asp-for="VehiculoId" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                    <span class="material-icons-round text-blue-600 text-base">directions_car</span>
                    @Html.DisplayNameFor(m => m.VehiculoId)
                </label>
                <input asp-for="VehiculoId"
                       class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50 text-sm
                              focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white" />
                <span asp-validation-for="VehiculoId" class="text-red-500 text-xs"></span>
            </div>

            <div class="space-y-1">
                <label asp-for="MecanicoId" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                    <span class="material-icons-round text-blue-600 text-base">engineering</span>
                    @Html.DisplayNameFor(m => m.MecanicoId)
                </label>
                <input asp-for="MecanicoId"
                       class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50 text-sm
                              focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white" />
                <span asp-validation-for="MecanicoId" class="text-red-500 text-xs"></span>
            </div>

            <div class="space-y-1 md:col-span-2">
                <label asp-for="Descripcion" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                    <span class="material-icons-round text-blue-600 text-base">description</span>
                    @Html.DisplayNameFor(m => m.Descripcion)
                </label>
                <textarea asp-for="Descripcion" rows="4"
                          class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50 text-sm
                                 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white"></textarea>
                <span asp-validation-for="Descripcion" class="text-red-500 text-xs"></span>
            </div>

            <div class="space-y-1">
                <label asp-for="Estado" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                    <span class="material-icons-round text-blue-600 text-base">flag</span>
                    @Html.DisplayNameFor(m => m.Estado)
                </label>
                <input asp-for="Estado"
                       class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50 text-sm
                              focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white" />
                <span asp-validation-for="Estado" class="text-red-500 text-xs"></span>
            </div>

            <div class="space-y-1">
                <label asp-for="Fecha" class="flex items-center gap-2 text-sm font-semibold text-gray-700">
                    <span class="material-icons-round text-blue-600 text-base">event</span>
                    @Html.DisplayNameFor(m => m.Fecha)
                </label>
                <input asp-for="Fecha" type="datetime-local"
                       class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-gray-50 text-sm
                              focus:outline-none focus:ring-2 focus:ring-blue-500 focus:bg-white" />
                <span asp-validation-for="Fecha" class="text-red-500 text-xs"></span>
            </div>

        </div>

        <div class="flex items-center justify-end gap-4 pt-4">
            <a asp-action="ListarDiagnosticos"
               class="px-5 py-2.5 rounded-xl border border-gray-300 text-sm text-gray-700 bg-white hover:bg-gray-100 flex items-center gap-2">
                <span class="material-icons-round text-base">arrow_back</span>
                Volver
            </a>

            <button type="submit"
                    class="px-6 py-2.5 rounded-xl bg-emerald-600 text-white text-sm font-semibold flex items-center gap-2 hover:bg-emerald-700 shadow-md">
                <span class="material-icons-round text-base text-white">save</span>
                Guardar cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
