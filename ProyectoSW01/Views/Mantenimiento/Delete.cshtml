@model ProyectoSW01.Models.Mantenimiento

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Eliminar mantenimiento</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>

<body class="bg-gray-100">

    <div class="max-w-3xl mx-auto px-4 py-6">

        <h1 class="text-2xl font-bold text-red-700 mb-6 flex items-center gap-2">
            <span class="material-icons text-red-700">delete_forever</span>
            Eliminar mantenimiento
        </h1>

        <div class="bg-white rounded-xl shadow p-6 border border-red-100">
            <p class="mb-4 text-sm text-gray-700 flex items-center gap-2">
                <span class="material-icons text-red-600">warning</span>
                ¿Estás seguro que deseas eliminar este mantenimiento? Esta acción no se puede deshacer.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6 text-sm">
                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">tag</span>ID
                    </p>
                    <p class="font-semibold text-gray-800">@Model.MantenimientoId</p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">directions_car</span>Vehículo ID
                    </p>
                    <p class="font-semibold text-gray-800">@Model.VehiculoId</p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">home_repair_service</span>Servicio ID
                    </p>
                    <p class="font-semibold text-gray-800">@Model.ServicioId</p>
                </div>

                <div>
                    <p class="text-xs text-blue-900 flex items-center gap-1">
                        <span class="material-icons text-sm">flag</span>Estado
                    </p>
                    <p class="font-semibold text-gray-800">@Model.Estado</p>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MantenimientoId" />

                <div class="flex items-center justify-end gap-3">
                    <a asp-action="ListarMantenimientos"
                       class="inline-flex items-center px-4 py-2 rounded-lg border border-blue-900 text-blue-900 text-sm hover:bg-blue-900 hover:text-white transition">
                        <span class="material-icons text-sm mr-1">arrow_back</span>
                        Cancelar
                    </a>
                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 rounded-lg bg-red-600 text-white text-sm font-semibold hover:bg-red-700 transition">
                        <span class="material-icons text-sm mr-1">delete</span>
                        Eliminar
                    </button>
                </div>
            </form>
        </div>

    </div>

</body>
</html>
