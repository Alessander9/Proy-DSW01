@model ProyectoSW01.Models.Mantenimiento

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Editar mantenimiento</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
</head>

<body class="bg-gray-100">

    <div class="max-w-3xl mx-auto px-4 py-6">

        <h1 class="text-2xl font-bold text-blue-900 mb-6 flex items-center gap-2">
            <span class="material-icons text-blue-900">edit_calendar</span>
            Editar mantenimiento
        </h1>

        <div class="bg-white rounded-xl shadow p-6">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MantenimientoId" />
                <div asp-validation-summary="ModelOnly" class="mb-4 text-sm text-red-600"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                    <!-- Vehículo -->
                    <div>
                        <label asp-for="VehiculoId" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">directions_car</span>
                            Vehículo
                        </label>
                        <select asp-for="VehiculoId"
                                class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm">
                            <option value="">Seleccione el vehículo</option>
                        </select>
                        <span asp-validation-for="VehiculoId" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Servicio -->
                    <div>
                        <label asp-for="ServicioId" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">home_repair_service</span>
                            Servicio
                        </label>
                        <select asp-for="ServicioId"
                                class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm">
                            <option value="">Seleccione el servicio</option>
                        </select>
                        <span asp-validation-for="ServicioId" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Fecha programada -->
                    <div>
                        <label asp-for="FechaProgramada" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">event</span>
                            Fecha programada
                        </label>
                        <input asp-for="FechaProgramada" type="datetime-local"
                               class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm" />
                        <span asp-validation-for="FechaProgramada" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Fecha entrega -->
                    <div>
                        <label asp-for="FechaEntrega" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">event_available</span>
                            Fecha entrega
                        </label>
                        <input asp-for="FechaEntrega" type="datetime-local"
                               class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm" />
                        <span asp-validation-for="FechaEntrega" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Estado -->
                    <div>
                        <label asp-for="Estado" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">flag</span>
                            Estado
                        </label>
                        <select asp-for="Estado"
                                class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm">
                            <option value="">-- Seleccione --</option>
                            <option value="programado">Programado</option>
                            <option value="en_proceso">En proceso</option>
                            <option value="entregado">Entregado</option>
                            <option value="cancelado">Cancelado</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-xs text-red-600"></span>
                    </div>

                    <!-- Notas -->
                    <div class="md:col-span-2">
                        <label asp-for="Notas" class="block text-sm font-semibold text-blue-900 mb-1">
                            <span class="material-icons text-sm mr-1 text-blue-900 align-middle">notes</span>
                            Notas
                        </label>
                        <textarea asp-for="Notas" rows="3"
                                  class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-900 focus:border-blue-900 text-sm"></textarea>
                        <span asp-validation-for="Notas" class="text-xs text-red-600"></span>
                    </div>
                </div>

                <div class="mt-6 flex items-center justify-end gap-3">
                    <a asp-action="ListarMantenimientos"
                       class="inline-flex items-center px-4 py-2 rounded-lg border border-blue-900 text-blue-900 text-sm hover:bg-blue-900 hover:text-white transition">
                        <span class="material-icons text-sm mr-1">arrow_back</span>
                        Volver
                    </a>
                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-900 text-white text-sm font-semibold hover:bg-blue-700 transition">
                        <span class="material-icons text-sm mr-1">save</span>
                        Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
